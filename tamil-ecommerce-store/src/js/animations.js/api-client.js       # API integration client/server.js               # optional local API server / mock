// File: /tamil-ecommerce-store/tamil-ecommerce-store/src/js/api-client.js

const apiBaseUrl = 'http://localhost:3000/api'; // Base URL for the API

// Function to handle API requests
async function apiRequest(endpoint, method = 'GET', data = null) {
    const options = {
        method: method,
        headers: {
            'Content-Type': 'application/json',
        },
    };

    if (data) {
        options.body = JSON.stringify(data);
    }

    try {
        const response = await fetch(`${apiBaseUrl}/${endpoint}`, options);
        if (!response.ok) {
            throw new Error(`HTTP error! status: ${response.status}`);
        }
        return await response.json();
    } catch (error) {
        console.error('API request failed:', error);
        throw error;
    }
}

// Example function to get products
async function getProducts() {
    return await apiRequest('products');
}

// Example function to create a new user
async function createUser(userData) {
    return await apiRequest('users', 'POST', userData);
}

// Example function to login a user
async function loginUser(credentials) {
    return await apiRequest('login', 'POST', credentials);
}

// Exporting functions for use in other modules
export { getProducts, createUser, loginUser };